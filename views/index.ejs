<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Note Taking App</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header>
      <h1>Note Taking App</h1>
      <a href="/create" class="btn">Create New Note</a>
    </header>

    <section class="notes">
      <% notes.forEach(note => { %>
      <div class="note <%= note.important ? 'important' : '' %>">
        <h2><%= note.title %></h2>
        <p><%= note.content %></p>
        <div class="actions">
          <a href="/delete/<%= note._id %>" class="btn delete-btn">Delete</a>
        </div>
      </div>
      <% }) %>
    </section>
  </body>
</html>
